.app-sync
  .app-sync-title {{ appSyncTitle }}

  .content-area
    el-row
      el-col(:span="4")
        .channel-area
          .parent-category Channels
          .child-category.active All Users
          .child-category Sato
          .child-category Iotan
      el-col(:span="20")
        el-row
          el-col.chat-area(:span="24")
            .chat-message-area
              MessageBodyComponent(
                v-for="item in chatMessages"
                :key="item.user_id + item.create_time"
                :chatMessage="item"
                :ref="item.create_time")
              #lastChatMessage
          el-col.input-mesage-area(:span="24")
            el-row
              el-col(:xs="18", :sm="20", :md="20", :lg="21", :xl="18", :offset="1")
                el-input.input-area(v-model="putMessage")
              el-col(:xs="5", :sm="3", :md="3", :lg="2", :xl="2")
                el-button.submit-button(type="primary", round=true, v-show="displayButton", @click="createMessage()") Send
                el-button.submit-button(type="warning", round=true, v-show="!displayButton", @click="updateMessage()") Edit
