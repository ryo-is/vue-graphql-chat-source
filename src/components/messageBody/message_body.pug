.chat-message(:class="checkMessgeClass()")
  .message-body(@click="changeDisplayControlIconArea()")
    .msg-text(v-show="displayUpdateInput") {{ chatMessage.message_body }}
    el-input(v-model="chatMessage.message_body", v-show="!displayUpdateInput", @change="editMessage(chatMessage.message_body)")
  .user-id {{ chatMessage.user_id }}
    span.create-time {{ chatMessage.create_time }}
  transition(name="el-fade-in-linear")
    el-row.message-control-area(type="flex", :justify="checkIconPosition()", v-show="displayControlArea")
      .edit-message-area.control-icon(v-show="editIcon" @click="changeEditMode()")
        i.el-icon-edit
      .edit-message-exit.control-icon(v-show="!editIcon" @click="exitEditMode()")
        i.el-icon-close
      .delete-message-badge.control-icon(@click="deleteMessage()")
        i.el-icon-delete

