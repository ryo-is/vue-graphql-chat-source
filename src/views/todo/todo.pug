.todo
  el-row
    el-col.task-status-list(
      :xs="24", :sm="12", :md="8", :lg="6", :xl="4",
      v-for="items, index in todoTasks", :key="index")
      .title {{ index }}
      draggable.task-content-area(
        :options="options", :list="items",
        @start="dragStart()", @end="dragEnd()")
        TodoTaskComponent(v-for="item in items", :key="item.title", :todoTaskItem="item")
        font-awesome-icon.create-task-icon(:icon="['far', 'plus-square']", @click="createTask(index)")
